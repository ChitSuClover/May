<h1>Task Management</h1>
<%= link_to 'NEW Task', new_task_path %>
<%= link_to 'Sort By Deadline', tasks_path(expired_at: "true")%>
<p>Search by Title </p>
<%= form_with(url: search_path, method: :get, local: true) do |f| %>
  <%= f.text_field :title %>
  <%= f.select :status, Task.statuses.keys.to_a, include_blank: true %>
  <%= f.submit 'search'%>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Label</th>
    <th>Status</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.expired_at %></td>
    <td><%= task.status %></td>
    <td>
      <%= link_to 'Show', task_path(task.id) %>
      <%= link_to 'Edit', edit_task_path(task.id), data: {confirm: "Confirm Edit!"} %>
      <%= link_to 'Delete', task_path(task.id), method: :delete, data: {confirm: "Confirm Delete!"} %>
    </td>
  </tr>
<% end %>
</table>
<%= paginate @tasks %>
