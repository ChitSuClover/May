<h1>Task Management</h1>
<%= link_to 'NEW Task', new_task_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Label</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td>
      <% task.labels.each do |label| %>
        <% if label.pripority %>!Important <% end %>
        <% if label.status %> Done! <% end %>
        <% if label.category1 %> Web_App <% end %>
        <% if label.category2 %> Graphic Design <% end %>
        <% if label.category3 %> POS <% end %>
      <% end %>
    </td>
    <td>
      <%= link_to 'Show', task_path(task.id) %>
      <%= link_to 'Edit', edit_task_path(task.id), data: {confirm: "Confirm Edit!"} %>
      <%= link_to 'Delete', task_path(task.id), method: :delete, data: {confirm: "Confirm Delete!"} %>
    </td>
  </tr>
<% end %>
</table>
