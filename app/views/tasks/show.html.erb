<div class="task_show_pg" >
<h1>View Task</h1>
<p><strong>Title:</strong>
  <%= @task.title %></p>
<p><strong>Content:</strong>
  <%= @task.content %></p>
<p><strong>Expired at:</strong>
  <%= @task.expired_at %></p>
<p><strong>Status:</strong>
  <%= @task.status %></p>
<p><strong>Pripority:</strong>
  <%= @task.pripority %></p>
<p><strong>Label:</strong>
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %></p>
<%= link_to 'Edit', edit_task_path(@task.id), data: {confirm: "Confirm Edit!"} , class:"link"%>
<%= link_to 'HOME', tasks_path, class:"link"%>
</div>
