<div class="task_new_pg" align="center">
<% if @task.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@task.errors.count, "error")%></h3>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div align="left">
  <%= form_with(model: @task, local: true, url: choose_new_or_edit) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :content %><br>
    <%= f.text_field :content %><br>
    <%= f.label :expired_at %><br>
    <%= f.text_field :expired_at %><br>
    <%= f.select :status, Task.statuses.keys.map{|s|[s,s]}, include_blank: "Select Status" %><br>
    <%= f.submit 'submit', class:"submit_btn"%>
  <% end %>
</div>
</div>
