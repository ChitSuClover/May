<h1>Admin Page</h1>
  <%= link_to 'NEW Task', new_task_path, class:"link_top" %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Count of Task</th>
    <th>Role </th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <td><%= user.role %></td>
    <td>
      <%= link_to 'Show', admin_user_path(user.id) %>
      <%= link_to 'Edit', edit_admin_user_path(user.id), data: {confirm: "Confirm Edit!"} %>
      <%= link_to 'Delete', admin_user_path(user.id), method: :delete, data: {confirm: "Confirm Delete!"} %>
    </td>
  </tr>
<% end %>
</table>
